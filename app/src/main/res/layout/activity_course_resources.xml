<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.learnstack.dell.learnstackd.activities.CourseResourcesActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/courseResourcesToolbar">
    </android.support.v7.widget.Toolbar>
    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:indicatorEnd="?android:attr/expandableListPreferredChildIndicatorRight"
        android:divider="#000"
        android:id="@+id/courseResourcesExpandableListView"
        android:dividerHeight="0.5dp"></ExpandableListView>
</LinearLayout>
