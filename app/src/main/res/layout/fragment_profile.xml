<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.learnstack.dell.learnstackd.fragments.ProfileFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:elevation="3dp"
                android:layout_margin="5dp"
                android:background="@color/colorAccent"
                android:orientation="vertical"
                android:gravity="center">
                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/cardViewHeader"
                    app:cardCornerRadius="50dp"
                    android:layout_gravity="center"
                    android:innerRadius="20dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9">
                    <ImageView
                        android:layout_height="80dp"
                        android:layout_width="match_parent"
                        android:id="@+id/profileImageHeader"
                        android:src="@drawable/account"
                        android:layout_gravity="center_vertical">
                    </ImageView>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Details"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:layout_margin="5dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="College: "
                            android:textSize="13dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:layout_margin="10dp"
                            android:id="@+id/profileCollegeName"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                            android:textSize="13dp"
                            android:text="Course: "
                            android:layout_margin="10dp"
                            android:id="@+id/profileCourseName"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:text="Branch: "
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:layout_margin="10dp"
                            android:id="@+id/profileBranchName"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Passing Year: "
                            android:textSize="13dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:layout_margin="10dp"
                            android:id="@+id/profilePassingYear"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Skills"
                    android:layout_margin="10dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    />
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/profileSkillsRecyclerView"></android.support.v7.widget.RecyclerView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Badges"
                    android:layout_margin="10dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textStyle="bold"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/profileBadgesRecyclerView"></android.support.v7.widget.RecyclerView>

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
